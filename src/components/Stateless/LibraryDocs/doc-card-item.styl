@import "~@/style/import"

.doc-item-card
  display: inline-block
  align-items: center
  margin: 8px 12px
  padding: 10px
  padding-bottom: 0
  border: 1px solid #ccc
  border-radius: 6px
  width: 320px
  font-size: 0
  cursor: pointer
  transition: box-shadow .2s ease-out
  &:hover
    box-shadow: 0 0 1px 2px #eee
  .doc-item-box
    display: flex
    padding-bottom: 10px
    align-items: center

  .doc-view
    display: inline-block
    border-right: 1px dashed #ddd
    width: 25%
    text-align: center
    .doc-icon
      width: 86%
    .count
      font-size: 14px
      color: shallow-text-gray

  .descripte
    display: inline-block
    overflow: hidden
    padding-left: 14px
    width: 75%
    line-height: normal
    .doc-name
      display: -webkit-box
      -webkit-box-orient: vertical
      -webkit-line-clamp: 2
      overflow: hidden
      margin-bottom: 12px
      height: 42px
      font-size: 14px
      text-overflow: ellipsis
      color: deep-black
    .user, .created
      display: inline-block
      overflow: hidden
      margin-right: 15px
      max-width: 110px
      font-size: 12px
      white-space: nowrap
      text-overflow: ellipsis
      color: shallow-text-gray
    .user
      color: blue-induce-text
      i
        font-size: 14px
    .collected, .reviews
      display: inline-block
      margin: 4px 10px 0 -8px
      padding: 6px 8px
      font-size: 12px
      color: shallow-text-gray
      cursor: pointer
      transition: background-color .2s ease-out
      i
        font-size: 16px
        vertical-align: top
      &:hover
        background-color: #eee

  footer
    border-top: 1px dashed #ddd
    padding-left: 10px
    font-size: 12px
    line-height: 24px
    color: shallow-text-gray
