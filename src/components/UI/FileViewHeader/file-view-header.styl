@import "~@/style/import"

header
  display: flex
  align-items: center
  justify-content: space-between
  margin: 0 auto 10px
  border-radius: 4px
  padding: 8px
  width: 1080px
  height: 60px
  font-size: 16px
  background-color: #fff
  box-shadow: 0 0 4px 1px #ddd
  .left-part
    .back
      display: inline-block
      border-radius: 6px 0 0 6px
      border-right: solid 1px #bbb
      padding: 8px
      width: 80px
      text-align: center
      vertical-align: middle
      color: gray-text
      transition: border .2s ease, background-color .2s ease
      i
        color: #bbb
      &:hover
        cursor: pointer
        border-color: #eee
        background-color: #eee
  .right-part
    .user
      width: 180px
      padding: 4px 0 4px 8px
      transition: background-color .2s ease
      &:hover
        cursor: pointer
        background-color: #eee
      img
        width: 36px
        height: 36px
        border-radius: 50%
        vertical-align: middle
      .description
        display: inline-block
        margin-left: 6px
        vertical-align: middle
        .name
          width: 120px
          overflow: hidden
          font-size: 14px
          white-space: nowrap
          text-overflow: ellipsis
          color: blue-text
        .time
          font-size: 12px
          color: gray-text
.title
  display: inline-block
  margin-left: 8px
  vertical-align: middle
  .file
    img
      width: 38px
      height: 38px
      vertical-align: middle
    .description
      display: inline-block
      margin-left: 2px
      vertical-align: middle
      .name
        overflow: hidden
        max-width: 700px
        font-size: 16px
        white-space: nowrap
        text-overflow: ellipsis
        color: deep-black
      .attribute
        font-size: 12px
        color: shallow-text-gray
        i
          margin-right: 8px
          color: blue-text
        .category
          overflow: hidden
          max-width: 500px
          white-space: nowrap
          text-overflow: ellipsis
        .reading
          margin: 0 8px
          border-left: solid 1px gray-text
          padding: 0 15px
