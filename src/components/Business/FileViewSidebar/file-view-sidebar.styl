@import "~@/style/import"

.sidebar
  margin-left: 10px
  width: 226px
  .operate, .folder, .comment
    margin-bottom: 10px
    border-radius: 4px
    padding: 14px
    color: gray-text
    background-color: #fff
    box-shadow: 0 0 4px 1px #ddd
    font-size: 14px
    .title
      margin-bottom: 6px
      font-size: 14px
      color: #666
  .operate
    height: 204px
    .title
      padding-bottom: 14px
      border-bottom: 1px solid #eee
      span
        font-size: 16px
        color: deep-black
    .controller
      font-size: 0
      .control
        display: inline-block
        margin: 4px
        border-radius: 6px
        width: 80px
        height: 60px
        vertical-align: top
        color: #666
        background-color: #fff
        transition: background-color .2s ease
        &:hover
          background-color: #eee
          cursor: pointer
        &.disable
          color: #ccc
          &:hover
            background-color: #fff
            cursor: not-allowed
        .icon
          font-size: 26px
        .description
          font-size: 12px

  .folder
    .folder-item
      padding: 4px 20px
      text-align: left
      transition: background-color .2s ease
      &:hover
        background-color: #eee
        cursor: pointer
      img
        display: inline-block
        max-width: 40px
        max-height: 40px
        vertical-align: middle
      .description
        display: inline-block
        margin-left: 4px
        font-size: 12px
        vertical-align: middle
        .folder-name
          color: blue-text
        .user
          display: inline-block
          &:hover
            color: blue-text
  .comment
    padding-bottom: 30px
    min-height: 320px
    .expand
      position: absolute
      margin-left: 10px
      color: blue-dark
      &:hover
        color: blue-pure
        cursor: pointer
    .comment-input
      margin: 4px 0
    .tips
      display: flex
      justify-content: space-between
      margin-bottom: 8px
      font-size: 12px
      .len-warn
        font-weight: bold
        color: orange-deep
    .comment-tip
      font-size: 12px
      color: shallow-text-gray
    .comment-item
      display: block
      padding: 6px 0 4px 0
      border-bottom: 2px solid #eee
      font-size: 12px
      text-align: left
      img
        display: inline-block
        border-radius: 50%
        width: 30px
        height: 30px
      .comment-content
        display: inline-block
        margin-left: 6px
        width: 128px
        vertical-align: top
        .discussant
          color: blue-text
        .content
          color: shallow-text-gray
      footer
        margin-top: 20px
        text-align: right
        .time
          color: #bbb

.strut-enter-active
  animation: strut-in .3s ease reverse

.strut-leave-active
  animation: strut-in .3s ease

@keyframes strut-in
  0%
    opacity: 1
    overflow: hidden
  to
    opacity: 0
    height: 0
    margin-top: 0
    margin-bottom: 0
    padding-top: 0
    padding-bottom: 0
    overflow: hidden


