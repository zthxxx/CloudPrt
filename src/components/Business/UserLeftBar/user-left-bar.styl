@import "~@/style/import"

.left-bar
  display: inline-block
  margin-right: 10px
  width: 200px
  text-align: left
  vertical-align: top
  box-shadow: 0 0 4px 1px #ddd

.head
  width: 100%
  height: 70px
  vertical-align: top
  background-color: theme-text-color
  .avatar
    margin: 10px
    border-radius: 50%
    width: 50px
    height: 50px
  .name
    display: inline-block
    width: 120px
    vertical-align: top
    .nickname
      display: -webkit-box
      -webkit-box-orient: vertical
      -webkit-line-clamp: 2
      overflow: hidden
      margin-top: 14px
      height: 50px
      font-size: 16px
      text-overflow: ellipsis
      word-break: break-all
      color: #fff

.tabs
  position: relative
  width: 100%
  background-color: #fff
  .items
    background-color: transparent
    .tab-item
      display: block
      width: 200px
      height: 70px
      font-size: 15px
      line-height: 70px
      text-align: center
      color: #666
      background-color: transparent
      transition: all .2s ease-out
      cursor: pointer
      &:hover
        background: rgba(#ccc, .1)
    .is-active
      border-left: 4px solid theme-green
      background-color: #f2f2f2
