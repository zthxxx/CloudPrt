@import "~@/style/import"

.library
  margin: 0 auto 20px
  width: 1080px
  font-size: 0

.pages, .sidebar
  display: inline-block
  border-radius: 3px
  text-align: center

.pages
  width: 844px
  min-height: 600px // tmp
  vertical-align: top
  background-color: #fff // tmp
  box-shadow: 0 0 4px 1px #ddd

.sidebar
  margin-left: 10px
  border-radius: 3px
  width: 226px
  .operate, .folder, .comment
    margin-bottom: 10px
    padding: 14px
    color: gray-text
    background-color: #fff
    box-shadow: 0 0 4px 1px #ddd
    font-size: 14px
    .title
      margin-bottom: 6px
      font-size: 14px
      color: #666
  .operate
    height: 204px
    .title
      padding-bottom: 14px
      border-bottom: 1px solid #eee
      span
        font-size: 16px
        color: deep-black
    .controller
      font-size: 0
      .control
        display: inline-block
        margin: 4px
        border-radius: 6px
        width: 80px
        height: 60px
        color: #666
        background-color: #fff
        transition: background-color .2s ease
        &:hover
          background-color: #eee
          cursor: pointer
        .icon
          font-size: 26px
        .description
          font-size: 12px

  .folder
    .folder-item
      padding: 4px 20px
      text-align: left
      transition: background-color .2s ease
      &:hover
        background-color: #eee
        cursor: pointer
      img
        display: inline-block
        max-width: 40px
        max-height: 40px
        vertical-align: middle
      .description
        display: inline-block
        margin-left: 4px
        font-size: 12px
        vertical-align: middle
        .folder-name
          color: blue-text
  .comment
    height: 500px
    .expand
      position: absolute
      margin-left: 10px
      color: blue-dark
      &:hover
        color: blue-pure
        cursor: pointer
    .comment-input
      margin: 4px 0
    .tips
      display: flex
      justify-content: space-between
      margin-bottom: 8px
      font-size: 12px
      .len-warn
        font-weight: bold
        color: orange-deep
    .comment-item
      font-size: 12px
      color: shallow-text-gray
